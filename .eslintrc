{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "rules": {
    "max-len": [1, 120, 2, {"ignoreComments": true}],
    // class 不一定需要使用this
    "class-methods-use-this": 0,
    // const let
    "prefer-const": 1,
    // 缩进
    "indent": 0,
    // LF 和 CRLF
    "linebreak-style": 0,
    // 未定义先使用
    "no-undef": 0,
    // 定义未使用
    "no-unused-vars": 0,
    // 对象同名
    "object-shorthand": 0,
    "guard-for-in": 0,
    "no-restricted-syntax": 0,
    "arrow-body-style": 0,
    "no-plusplus": 1,
  }
}